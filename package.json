{
  "name": "HostsFileEdit",
  "version": "1.0.1",
  "description": "This app helps you to edit your hosts file with a minimalist UI",
  "repository": "https://github.com/LouWii/hosts-file-edit",
  "scripts": {
    "postinstall": "install-app-deps"
  },
  "devDependencies": {
    "electron-builder": "7.13.0",
    "electron-packager-tf": "7.5.3",
    "electron": "1.4.3",
    "gulp": "^3.9.1",
    "mocha": "^3.1.2",
    "spectron": "^3.4.0",
    "webpack-stream": "^3.2.0"
  },
  "build": {
    "appId": "com.electron.hostsfileedit",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "resources/icon.icns",
      "target": "dmg"
    },
    "linux": {
      "category": "Utility",
      "target": ["deb", "rpm", "AppImage"]
    }
  }
}
